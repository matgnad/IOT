<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Backend API Base URL -->
    <!-- Change this to match your Node.js backend server address -->
    <add key="ApiBaseUrl" value="http://localhost:3000" />
    
    <!-- Refresh interval in seconds (default: 10) -->
    <add key="RefreshInterval" value="10" />
    
    <!-- ============================= -->
    <!-- ALERT SYSTEM CONFIGURATION -->
    <!-- ============================= -->
    
    <!-- Alert Thresholds -->
    <add key="TemperatureThreshold" value="35.0" />
    <add key="HumidityThreshold" value="80.0" />
    
    <!-- Email Cooldown (minutes) - Prevents spam -->
    <add key="EmailCooldownMinutes" value="15" />
    
    <!-- Gmail SMTP Configuration -->
    <!-- IMPORTANT: Use Gmail App Password, NOT your regular password! -->
    <!-- Generate from: https://myaccount.google.com/ → Security → App passwords -->
    <add key="GmailUser" value="your_email@gmail.com" />
    <add key="GmailAppPassword" value="your_16_char_app_password" />
    <add key="AlertEmailTo" value="your_email@gmail.com" />
    
    <!-- ============================= -->
    <!-- MQTT CONFIGURATION (OPTIONAL) -->
    <!-- ============================= -->
    <!-- Enable MQTT for real-time alerts (recommended) -->
    <!-- Format: mqtt://host:port or mqtt://username:password@host:port -->
    <add key="MqttBrokerUrl" value="mqtt://localhost:1883" />
    <add key="MqttUsername" value="" />
    <add key="MqttPassword" value="" />
    <add key="MqttTopic" value="esp8266/sensors" />
    
    <!-- ============================= -->
    <!-- DATA SOURCE SELECTION -->
    <!-- ============================= -->
    <!-- UseMqtt: true = Use MQTT for real-time alerts (recommended) -->
    <!-- UseMqtt: false = Use REST API polling (fallback) -->
    <add key="UseMqtt" value="true" />
  </appSettings>
</configuration>

