# =============================
# IoT Monitoring System - Environment Variables
# =============================

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=iot_db

# Server Configuration
PORT=3000

# MQTT Broker Configuration
MQTT_URL=mqtt://your_mqtt_broker:1883

# =============================
# Alert System Configuration
# =============================

# Temperature Threshold (Â°C)
TEMP_THRESHOLD=35.0

# Humidity Threshold (%)
HUMIDITY_THRESHOLD=80.0

# Email Cooldown Period (milliseconds)
# Default: 15 minutes (900000 ms)
EMAIL_COOLDOWN_MS=900000

# =============================
# Gmail Alert Configuration
# =============================

# Gmail Account (sender)
GMAIL_USER=your_email@gmail.com

# Gmail App Password (NOT your regular password!)
# Generate from: https://myaccount.google.com/ â†’ Security â†’ App passwords
GMAIL_APP_PASSWORD=your_16_char_app_password

# Alert Recipient Email
ALERT_EMAIL_TO=your_email@gmail.com
